<div class="text-center">
<h1>Create a New activity</h1>
</div>
<%= simple_form_for @activity do |f| %>
<div class="container shadow bg-white rounded my-5 p-4">
  <div class="row">
    <div class="col-8">
      <%= f.input :name %>
    </div>
  </div>

   <div class="row">
    <div class="col-8">
     <%= f.collection_check_boxes :items_id, Item.all, :id, :thing %>
    </div>
  </div>

  <div class="text-right">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
</div>
<% end %>
